    <select id="getClubsByUser" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    	SELECT
		`club`.`club_id`,
		`club`.`clubname`,
		`club`.`description`,
		`club`.`image`,
		`club`.`setuptime`,
		`club`.`validationState`
		FROM
		`club_membership`,
		`club`
		WHERE
		user_id = #{userId} AND `hackpku`.`club`.club_id = `hackpku`.`club_membership`.club_id
    </select>
