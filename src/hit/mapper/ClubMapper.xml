		   delete from club_membership
    		where user_id = #{user.userId} AND club_id = #{club.clubId}
	</delete>
	<delete id="deleteClubRequest" parameterType="hit.po.ClubMember">
		   delete from club_request
    		where user_id = #{user.userId} AND club_id = #{club.clubId}
	</delete>
